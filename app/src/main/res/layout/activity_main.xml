<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lmd.thomas.gamechoice.ui.main.MainActivity"
    android:orientation="vertical"
    android:weightSum="2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:text="Vamos brincar com as palavras que vocÃª aprendeu?"
        />

    <ImageButton
        android:id="@+id/image_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/puzzle"
        android:background="@drawable/riple_primary"
        android:onClick="onClickButton"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:padding="32dp"
        android:text="@string/puzzle"/>

    <ImageButton
        android:id="@+id/image_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/wordsearch"
        android:background="@drawable/riple_primary_dark"
        android:onClick="onClickButton"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:padding="32dp"
        android:text="@string/word_search"/>

</LinearLayout>