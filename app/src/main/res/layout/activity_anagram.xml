<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context="com.lmd.thomas.gamechoice.ui.anagram.AnagramActivity">

    <LinearLayout
        android:id="@+id/root_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/next_word"-->
        <!--android:id="@+id/next_word_button"-->
        <!--android:visibility="invisible"-->
        <!--android:onClick="nextWordButtonClick"-->
        <!--android:layout_marginBottom="200dp"-->
        <!--/>-->

        <LinearLayout
            android:id="@+id/panel_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_letters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:gravity="center">

        </LinearLayout>

    </LinearLayout>

    <com.scalified.fab.ActionButton
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:visibility="invisible"
        android:onClick="onClickNextButton"
        app:type="BIG"
        app:hide_animation="@anim/fab_scale_down"
        app:show_animation="@anim/fab_scale_up"
        app:button_color="@color/colorAccent"
        app:button_colorPressed="@color/colorAccent_900"
        app:rippleEffect_enabled="true"
        app:image="@drawable/right_arrow"
        app:image_size="40dp"
        />


</RelativeLayout>